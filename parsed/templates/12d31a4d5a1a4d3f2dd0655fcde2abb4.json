{"components/custom/blog-feed":"{{#if settings.blog_enabled}}\n{{#if blog}}\n<div class=\"home recent-blog-posts\">\n  <h2 class=\"container-header page-heading news\">{{ blog.name }}</h2>\n  <div class=\"recent-posts-slider\">\n  {{#each blog.recent_posts}}\n    {{#if thumbnail}}\n      <figure class=\"blog-thumbnail\">\n        <a href=\"{{url}}\">\n          <div class=\"zoom-image-container\">\n            <img src=\"{{getImage thumbnail 'gallery'}}\" alt=\"{{thumbnail.alt}}\" title=\"{{thumbnail.alt}}\">\n          </div>\n          <div class=\"blog-title\"><a href=\"{{url}}\">{{title}}</a></div>\n          <p class=\"blog-date\">{{date_published}}</p>\n        </a>\n      </figure>\n    {{else}}\n    <figure class=\"blog-thumbnail\">\n      <a href=\"{{url}}\">\n        <div class=\"zoom-image-container\">\n          <img src=\"{{cdn 'img/blog-feed-image-coming-soon-placeholder-pinnacle-2.png'}}\" alt=\"{{thumbnail.alt}}\" title=\"{{thumbnail.alt}}\">\n        </div>\n        <div class=\"blog-title\"><a href=\"{{url}}\">{{title}}</a></div>\n        <p class=\"blog-date\">{{date_published}}</p>\n      </a>\n    </figure>\n    {{/if}}\n  {{/each}}\n</div>\n  <div class=\"clear\"></div>\n</div>\n{{/if}}\n{{/if}}\n"}
